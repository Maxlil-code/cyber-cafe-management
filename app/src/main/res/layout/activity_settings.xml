<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsActivity">

    <LinearLayout
        android:id="@+id/setting_bar"
        android:layout_width="411sp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher_background2">


        <ImageView
            android:id="@+id/setting"
            android:layout_width="40sp"
            android:layout_height="54sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_back_arrow"
            android:onClick="setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/setting_bar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/settings"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/setting_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/setting_picture">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="14sp"
            android:layout_marginLeft="15sp"
            android:src="@drawable/ic_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textColor="@color/purple"
            android:layout_marginTop="8sp"
            android:paddingLeft="42sp"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_notification">

        <TextView
            android:id="@+id/darkmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:text="Dark Mode"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Switch
            android:id="@+id/btndark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="10sp" />

    </LinearLayout>

</RelativeLayout>